<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>時系列</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= image_tag post.get_image(70, 70) %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.release %></td>
        <td><%= post.timeline %></td>
        <td><%= post.tag %></td>
      </tr>
    <% end %>
  </tbody>
</table>