<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th><%= link_to "公開年", posts_path(sort: 'release', direction: (params[:direction] == 'asc' ? 'desc' : 'asc')) %></th>
      <th><%= link_to "時系列", posts_path(sort: 'timeline', direction: (params[:direction] == 'asc' ? 'desc' : 'asc')) %>  </th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= image_tag post.get_image(70, 70) %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.release %></td>
        <td><%= post.timeline %></td>
        <td>
          <% if post.tag.present? %>
            <%= link_to post.tag, search_path(model: 'post_tag', method: 'partial', content: post.tag) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>