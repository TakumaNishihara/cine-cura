<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>タイトル</th>
      <th>
        <%= link_to "公開年", posts_path(sort: 'release', direction: (params[:direction] == 'asc' ? 'desc' : 'asc')) %>
      </th>
      <th>
        <%= link_to "時系列", posts_path(sort: 'timeline', direction: (params[:direction] == 'asc' ? 'desc' : 'asc')) %>     
      </th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.get_image(70, 70) %>
        </td>
        <td>
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          <%= post.release %>
        </td>
        <td>
          <%= post.timeline %>
        </td>
        <td>
          <%= post.tag %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>