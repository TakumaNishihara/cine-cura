マイページ
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
</div>

<h2>あなたの投稿一覧</h2>
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>タイトル</th>
      <th>リリース</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.get_image(70, 70) %> 
        </td>
        <td>
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          <%= post.release %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= paginate @posts %>