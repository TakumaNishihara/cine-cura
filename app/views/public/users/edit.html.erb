<div class="row mt-5">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <h4 class="text-center">
      <span class="px-3 font-weight-bold" style="background-color: #e8e8e8;">ユーザー情報編集</span>
    </h4>

    <div class="card mt-5">
      <div class="card-body">

        <%= form_with model: @user do |f| %>
          <%= render "public/shared/error_messages", resource: @user %>
          
          <div class="mb-3">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <label for="inputImage">プロフィール画像</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>

          <div class="mb-5">
            <%= f.submit "変更を保存", class: "btn btn-primary btn-block" %>
          </div>

          <div class="mb-3 d-flex justify-content-end">
            <%= link_to '退会する', unsubscribe_path, class: 'btn btn-danger' %>
          </div>
        <% end %>
  <div>
</div>