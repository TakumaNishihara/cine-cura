<h2 class="mb-4">プロフィール編集</h2>

<div class="container">
  <%= form_with model: @user do |f| %>
    <%= render "public/shared/error_messages", resource: @user %>
    
    <div class="mb-3">
      <label for="inputName">名前</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>

    <div class="mb-3">
      <label for="inputEmail">メールアドレス</label>
      <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
    </div>

    <div class="mb-3">
      <label for="inputImage">プロフィール画像</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div class="mb-3">
      <%= f.submit "変更を保存" %>
    </div>

    <div class="mb-4">
      <%= link_to '退会する', unsubscribe_path, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>