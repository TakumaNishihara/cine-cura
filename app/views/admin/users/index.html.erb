<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>ユーザー名</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(70, 70) %>
        </td>
        <td>
          <%= link_to user.name, user_path(user.id) %>
        </td>
        <td>
        <% if user.is_active %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="text-danger">無効</span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>