<div class="row mt-5">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <h4 class="text-center">
      <span class="px-3 font-weight-bold" style="background-color: #e8e8e8;">ユーザー情報編集</span>
    </h4>

    <div class="card mt-5">
      <div class="card-body">

    <%= form_with model: [:admin, @user] do |f| %>
      <%= render "admin/shared/error_messages", resource: @user %>
      
          <div class="mb-3">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

      <div class="mb-3">
        <label for="inputEmail">メールアドレス</label>
        <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
      </div>

      <div class="mb-3">
        <label for="inputImage">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>

      <div class="mb-4">
        <label for="inputIsActive">会員ステータス</label>
        <%= f.select :is_active, 
                    [["有効", true], ["無効", false]], 
                    { include_blank: false }, 
                    { id: "inputIsActive" } %>
      </div>
      
      <%= f.submit "変更を保存" %>

    <% end %>
      </div>
    </div>
  </div>
</div>