<h2>ユーザー編集</h2>
<%= form_with model: [:admin, @user] do |f| %>
  <%= render "admin/shared/error_messages", resource: @user %>
  
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>

  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <label for="inputIsActive">会員ステータス</label>
  <%= f.select :is_active, 
               [["有効", true], ["無効", false]], 
               { include_blank: false }, 
               { id: "inputIsActive" } %>

  <%= f.submit "変更を保存" %>

<% end %>