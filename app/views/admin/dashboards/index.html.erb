<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>公開年</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.get_image(70, 70) %>
        </td>
        <td>
          <%= link_to post.title, post_path(post.id) %>
        </td>
        <td>
          <%= post.release %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>